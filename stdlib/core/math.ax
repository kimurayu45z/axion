import number.*

pub fn min[T: Number](a: T, b: T) -> T
    if a < b
        a
    else
        b

pub fn max[T: Number](a: T, b: T) -> T
    if a > b
        a
    else
        b

pub fn clamp[T: Number](x: T, lo: T, hi: T) -> T
    if x < lo
        lo
    else
        if x > hi
            hi
        else
            x

pub fn abs[T: SNumber](x: T) -> T
    if x < 0
        0 - x
    else
        x

pub fn sign[T: SNumber](x: T) -> T
    if x > 0
        1
    else
        if x < 0
            0 - 1
        else
            0

pub fn pow[T: Int](base: T, exp: T) -> T
    let mut result = 1
    let mut i = 0
    while i < exp
        result = result * base
        i = i + 1
    result

pub fn gcd[T: UInt](a: T, b: T) -> T
    let mut x = a
    let mut y = b
    while y > 0
        let t = y
        y = x % t
        x = t
    x

pub fn lcm[T: UInt](a: T, b: T) -> T
    let g = gcd[T](a, b)
    if g == 0
        0
    else
        a / g * b

pub fn is_even[T: Int](x: T) -> bool
    if x % 2 == 0
        true
    else
        false

pub fn is_odd[T: Int](x: T) -> bool
    if x % 2 == 0
        false
    else
        true
